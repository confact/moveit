<div class="ui stackable two column grid container">
  <div class="column">
    <h1>Price proposals for furniture moving</h1>
  </div>
  <div class="row">
    <div class="column">
      <p>
        Proposal number: <%= @offer.id %>
      </p>

      <p>
        <%= @offer.name %><br />
        <%= @offer.email %>
      </p>

      <p>
        <strong>From:</strong>
        <%= @offer.from_address %><br />
        <strong>To:</strong>
        <%= @offer.to_address %> <br />
        <strong>Distance:</strong>
        <%= @offer.distance %> km
      </p>

      <p>
        <strong>House's area:</strong>
        <%= @offer.living_area %> kvm<br />
        <strong>Storage area:</strong>
        <%= @offer.storage_area %> kvm
      </p>

      <h2>Misc</h2>
      <p>
        <strong>Moving Piano?:</strong>
        <%= human_boolean(@offer.piano) %> <br />
        <strong>Help to pack?:</strong>
        <%= human_boolean(@offer.help) %>
      </p>
    </div>
    <div class="column">
      <p class="priceinfo">
        <strong>Estimated price:</strong><br />
        <i class="price"><%= number_with_delimiter(@offer.price, delimiter: " ") %> incl vat</i>
      </p>
      <p>
        We save your price for 90 days<br />
        To see the price estimation again, visit:<br/>
        <a href="http://moveit.se/offert/<%=@offer.id%>">http://moveit.se/offert/<%=@offer.id%></a>
      </p>
      <p>
        If you have any questions, contact flytt@moveit.se
      </p>
    </div>
  </div>
  <div class="ui section divider"></div>
  <div class="row">
    <div class="column">
      <%= link_to 'Back', root_path, class: 'ui blue button' %>
    </div>
  </div>
</div>
